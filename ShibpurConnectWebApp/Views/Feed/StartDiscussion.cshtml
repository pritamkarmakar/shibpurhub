<div class="container">
    <div class="col-md-6 col-md-offset-4" id="toolbar" role="toolbar">
        @{
            var routeAction = TempData["SelectedPage"];
        }
        <ul class="nav nav-pills">
            <li id="li_discussion" class="@(routeAction == "Threads" ? "active" : "")"><a href="\Feed\Index"><i class="fa fa-rss"></i>  Discussions</a></li>
            <li class="@(routeAction == "Categories" ? "active" : "")"><a href="\Feed\Categories"><i class="fa fa-tags"></i>  Categories</a></li>
            <li class="@(routeAction == "Users" ? "active" : "")"><a href="\Feed\Users"><i class="fa fa-users"></i>  Users</a></li>
            <li class="@(routeAction == "StartDiscussion" ? "active" : "")"><a href="\Feed\StartDiscussion"><i class="fa fa-question"></i>    Start Discussion</a></li>
        </ul>
    </div>
</div>

<h4>Details</h4>
<hr />
    <div class="panel-body">
        <form action="#" class="form-horizontal" method="post" role="form">
            <div class="form-group">
                <label class="control-label col-md-2" for="Question">Question</label>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input class="form-control" id="txt_question" placeholder="What is your question?" type="text" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="DetailedText">Description</label>
                <div class="col-md-6">
                    <textarea class="form-control" id="txtarea_description" placeholder="Description" rows="3" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="Categories">Categories</label>
                <div class="col-md-10">
                    <select class="form-control" id="select_categories" multiple>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" class="btn btn-primary" id="btn_Save" value="Save">
                </div>
            </div>
        </form>
    </div>


