@model ShibpurConnectWebApp.Models.FeedViewModel
@{
    ViewBag.Title = "Feed";
}

<style type="text/css">   
    .moduleheader {
        font-size: 18px;
    }    
</style>

<script type="text/javascript">
    $(document).ready(function()
    {
        // hide the right column modules, we will enable inside respective the partial view once receive the server response
        $('.popularuserscontainerdiv').hide();
        $('.tagcontainermaindiv').hide();
        $('.popularquestioncontainerdiv').hide();
        scAjax({
            "url": "questions/GetTotalQuestionCount",
            "success": function (result) {
                $('.questioncount').text(result);
                $('.questioncount').after("<p>questions</p>");
            }
        });
    })
</script>

<div class="container">
    <div class="col-md-9">
        <div class="row subheader" style="border-bottom-style:dotted">
            <h2 class="moduleheader" style="float:left;">All Questions</h2>
            <div id="tabs" style="float:right">
                <ul class="nav nav-pills" role="tablist">
                    <li role="presentation"><a href="#">newest <span class="badge">42</span></a></li>
                    <li role="presentation"><a href="#">most active</a></li>
                    <li role="presentation"><a href="#">unanswered <span class="badge">3</span></a></li>
                </ul>
            </div>
        </div>
        @Html.Partial("~/Views/PartialViews/_FeedList.cshtml")
    </div>
    <div class="col-md-3">
        <div class="module" id="questions-count">
            <div class="questioncount" style="font-size:30px"></div>           
        </div> 
        @Html.Partial("~/Views/PartialViews/_LeaderBoard.cshtml")
        @Html.Partial("~/Views/PartialViews/_PopularTags.cshtml")       
        @Html.Partial("~/Views/PartialViews/_PopularQuestions.cshtml")   
    </div>
</div>
