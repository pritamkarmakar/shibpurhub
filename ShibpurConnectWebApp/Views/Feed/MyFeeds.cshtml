@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Activity - SnapResponses";
}

<!--this knockout js will save the token in the session storage and we want to make the call only when user is logged in-->
@if (User.Identity.IsAuthenticated)
{
    @section Scripts{
        @Scripts.Render("~/bundles/knockout")
        @Scripts.Render("~/bundles/app")
    }
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/feed/feedlistV1.css?v=1.7")" />
<script src="@Url.Content("~/Scripts/feed/myfeed.js?v=1.7")" type="text/javascript"></script>

<div class="container">

    <div class="col-md-9 left-side feed-list">
        <div class="parentloadingdiv">
            <div id="loading">
                <i class="fa fa-spinner fa-pulse fa-2x fa-fw margin-bottom"></i>
            </div>
            </div>
            <div class="row item hide">
                <div class="col-xs-12 thread">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="row post-header">
                                <div class="col-sm-12 col-xs-8 headers-col">
                                    <div class="profile-img-col">
                                        <a href="#" class="post-creator-image"></a>
                                    </div>
                                    <p class="header-text-content ">
                                        <a href="#" class="name-link">Pritam Karmakar</a>
                                        <span class="action"></span>
                                        <a href="#" class="type-link discussion target"></a>
                                    </p>
                                    <p class="tagline-text-content designation"></p>
                                </div>

                            </div>
                            <div class="row content">
                                <div class="col-xs-12 col-md-12 ">
                                    <h2 class="title">
                                        <a href="#">Need help to create SnapResponses animated video</a>
                                    </h2>
                                    <div class="post-description">
                                        <p>

                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row thread-details">
                        <div class="thread-details-container">
                            <div class="col-xs-12 col-md-5">
                                <ul class="list-inline pull-left upvote-ul">
                                    <li>
                                        <a href="#" class="thumbs" data-allowed="true"><i class="fa fa-arrow-up"></i> <span>Upvote</span></a>
                                    </li>
                                </ul>
                                <ul class="list-inline pull-left follow-ul">
                                    <li>
                                        <a href="#" class="thumbs" data-allowed="true"><i class="fa fa-plus-circle"></i> <span>Follow</span></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-xs-12 col-md-7 hidden-xs">
                                <ul class="extra-details pull-right list-inline">
                                    <li>
                                        <span class="view-count"></span>
                                    </li>
                                    <li>
                                        <span class="answer-count"></span>
                                    </li>
                                    <li>
                                        <span class="post-pub-time">Jul 31, 2015</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row load hide">
                <div class="col-xs-12 thread text-center loadMoreContainer">
                    <a href="#" class="loadMore" id="loadMoreBtn">
                        <span class="toggleThis loadlabel" style="display: inline;">Load more</span>
                        <span class="toggleThis spinner" style="display: none;"><i class="fa fa-spinner fa-spin fa-fw"></i> Loading more..</span>
                    </a>
                </div>
            </div>
        </div>
    <div class="col-xs-12 col-md-3">
        @Html.Partial("~/Views/PartialViews/_PopularTags.cshtml")
        @Html.Partial("~/Views/PartialViews/_LeaderBoard.cshtml")       
        @Html.Partial("~/Views/PartialViews/_PopularQuestions.cshtml")
    </div>
    <input type="hidden" id="currentPage" value="0" />
    <input type="hidden" id="alreadyShown" value="0" />
</div>


<div class="user-feed hide">
    <div class="col-md-3 post-link-image-container">
        <a class="post-link-image-small user-feed-img" target="_blank" href="#" style="background-image: url('')">
        </a>

    </div>
    <div class="col-xs-12 col-md-9 ">
        <h2>
            <a href="#">Pritam Karmakar</a>
        </h2>
        <p class="tagline-text-content">QA Architect, Tibco Software Inc (2006 EE)</p>
        <div class="post-description profile">
            <ul class="col-md-5">                
                <li class="text-right userquestioncount"><span class="pull-left"><strong class="">Questions</strong></span><a href="#tab4">8</a></li>
                <li class="text-right useranswercount"><span class="pull-left "><strong class="">Answers</strong></span><a href="#tab5">30</a></li>
                <li class="text-right reputationcount"><span class="pull-left "><strong class="">Reputation</strong></span><span class="count"></span></li>
            </ul>
        </div>
    </div>
</div>
