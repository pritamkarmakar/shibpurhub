<script type="text/javascript">
    $(document).ready(function () {
        scAjax({
            "url": "questions/GetPopularQuestions?count=10",
            "success": function (result) {
                if (!result) {
                    return;
                }
                $('.popularquestioncontainerdiv').show();

                $.each(result, function (key, value) {
                    if (value.answerCount > 0)
                        $('#popularquestioncloud').append("<div class='popularquestiondiv'><a class='popularquestiontitle' href='/feed/" + value.questionId + "'> " + value.title + "..</a></div>");
                    else
                        $('#popularquestioncloud').append("<div class='popularquestiondiv'><a class='popularquestiontitle' href='/feed/" + value.questionId + "'> " + value.title + "..</a></div>");
                });
            }
        });
    });
</script>
