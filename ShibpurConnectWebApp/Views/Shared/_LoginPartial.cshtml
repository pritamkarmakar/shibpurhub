@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="loggedinuser" role="button" aria-expanded="false">@User.Identity.GetUserName() <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li><a href="/account/profile">Profile</a></li>
                <li><a href="/settings">Settings</a></li> 
                <li><a href="/manage">Manage Logins</a></li>
                <li role="presentation" class="divider"></li>
                <li><a href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();javascript:localStorage.clear();">Log off</a></li>
            </ul>
        </li>        
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
