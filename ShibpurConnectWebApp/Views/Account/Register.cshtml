                    </div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-md-3"><input type="submit" value="Register" class="btn btn-primary btn-block btn-sm" tabindex="7"></div>
                    <div class="col-xs-6 col-md-3"><a href="/Account/Login" class="btn btn-success btn-block btn-sm">Sign In</a></div>
                </div>
            @*</form>*@
}
